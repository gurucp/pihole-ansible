[pihole]
FTLport = 4711
FTLinterface = "{{ pihole_interface }}"
MAXDBDAYS = 30
DBINTERVAL = 1
DBIMPORT = true
DBRELOAD = true
REPLY_ADDR4 = "{{ pihole_ipv4 }}"
BLOCKINGMODE = "null"

[api]
API_PORT = 80
API_QUERY_LOG_SHOW = "all"
API_PRIVACY_MODE = false

[dns]
BLOCK_IPV4 = "{{ pihole_ipv4 }}"
BLOCK_IPV6 = ""
upstreams = [
  "8.8.8.8",
  "8.8.4.4"
]
DNSSEC = true

[logging]
QUERY_LOGGING = true
